<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_balance_sheet_wizard_form" model="ir.ui.view">
        <field name="name">balance.sheet.wizard.form</field>
        <field name="model">balance.sheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Balance Sheet Report">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="horizontal_view"/>
                    </group>
                </group>
                <footer>
                    <button name="action_view_report" string="View Report" type="object" class="btn-secondary"/>
                    <button name="action_download_excel" string="Download Excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>